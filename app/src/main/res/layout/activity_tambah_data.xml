        android:id="@+id/textRP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/textPenyakit"
        android:textColor="#101010"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/editRiwayat"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJKTambahData" />

    <!-- Ini adalah bagian untuk menampilkan gambar
         - Mempunyai id berupa imageKupuUngu
         - Gambar yang ditampilkan berupa gambar kupu-kupu berwarna ungu
         - Gambar berasal dari drawble
         - Tinggi gambar ialah 50dp dengan lebar 55dp
         - Menggunakan contentDescription yang dikelompokkan pada string
    -->
    <ImageView
        android:id="@+id/imageKupuUngu"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="272dp"
        android:layout_marginBottom="60dp"
        android:contentDescription="@string/imageKupuUngu"
        app:layout_constraintBottom_toTopOf="@+id/editJudul"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/kupuungu" />

</androidx.constraintlayout.widget.ConstraintLayout>