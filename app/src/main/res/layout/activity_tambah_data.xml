<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbdefb"
    android:padding="20dp"
    tools:context=".TambahDataActivity">

    <!-- Ini adalah bagian teks yang ditambahkan pada projek Data Pasien
         - Mempunyai id berupa textTambahData
         - Untuk menampilkan keluaran berupa tulisan Tambah Data Pasien
         - Menggunakan font berupa serif-medium
         - Mempunyai ukuran teks sebesar 24sp
         - Dan dikelompokkan berdasarkan resource string agar tidak menampilkan error
    -->
    <TextView
        android:id="@+id/textTambahData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/textMasukkanData"
        android:textColor="#020942"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Ini adalah bagian untuk memasukkan dan mengedit teks yang ditambahkan pada projek Data Pasien
         - Mempunyai id berupa editJudul
         - Untuk menampilkan keluaran hint berupa tulisan Masukkan Judul
         - Menggunakan input teks berupa textPersonName
         - Mempunyai ukuran teks sebesar 12sp
         - Dan dikelompokkan berdasarkan resource string agar tidak menampilkan error
         - Mempunyai style tulisan yang berasal dari drawble
    -->
    <EditText
        android:id="@+id/editJudul"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:autofillHints=""
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="@string/editJudul"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#546E7A"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTambahData"
        tools:ignore="LabelFor" />

    <!-- Ini adalah bagian untuk memasukkan dan mengedit teks yang ditambahkan pada projek Data Pasien
         - Mempunyai id berupa editNama
         - Untuk menampilkan keluaran hint berupa tulisan Masukkan Nama
         - Menggunakan input teks berupa textPersonName
         - Mempunyai ukuran teks sebesar 12sp
         - Dan dikelompokkan berdasarkan resource string agar tidak menampilkan error
         - Mempunyai style tulisan yang berasal dari drawble
    -->
