        android:id="@+id/textJKTambahData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/textJKTambahData"
        android:textColor="#020202"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/editJK"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAlamat" />

    <!-- Ini adalah bagian teks yang ditambahkan pada projek Data Pasien
         - Mempunyai id berupa textRP
         - Untuk menampilkan keluaran berupa tulisan Penyakit
         - Menggunakan font berupa sans-serif-light
