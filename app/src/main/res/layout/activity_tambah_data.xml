        android:id="@+id/editTTL"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:autofillHints=""
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="@string/editTTL"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#546E7A"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNama"
        tools:ignore="LabelFor" />

    <!-- Ini adalah bagian untuk memasukkan dan mengedit teks yang ditambahkan pada projek Data Pasien
         - Mempunyai id berupa editAlamat
         - Untuk menampilkan keluaran hint berupa tulisan Masukkan Alamat
         - Menggunakan input teks berupa textPersonName
         - Mempunyai ukuran teks sebesar 12sp
         - Dan dikelompokkan berdasarkan resource string agar tidak menampilkan error
         - Mempunyai style tulisan yang berasal dari drawble
    -->
